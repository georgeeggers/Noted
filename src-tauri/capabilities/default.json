{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "core:path:default",
    "fs:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/*"
        }
      ]
    },
    "sql:default",
    "sql:allow-execute",
    "sql:allow-close",
    "sql:allow-select"
  ]
}